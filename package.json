{
  "name": "web",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:offline": "PUBLIC_SKIP_GITHUB_API=true astro build",
    "preview": "astro preview",
    "fetch-colors": "wget -O src/colors.json https://github.com/ozh/github-colors/raw/master/colors.json && pnpm format:fix",
    "format": "prettier --check src --plugin=prettier-plugin-astro",
    "format:fix": "prettier --write src --plugin=prettier-plugin-astro",
    "typecheck": "astro check --minimumFailingSeverity=hint",
    "test": "playwright test",
    "test:visual": "playwright test tests/visual",
    "test:visual:ui": "playwright test tests/visual --ui",
    "test:visual:update": "playwright test tests/visual --update-snapshots",
    "test:visual:report": "playwright show-report",
    "test:visual:debug": "playwright test tests/visual --debug"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/sitemap": "^3.7.0",
    "@playwright/test": "^1.57.0",
    "astro": "^5.16.9",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.28.0+sha512.05df71d1421f21399e053fde567cea34d446fa02c76571441bfc1c7956e98e363088982d940465fd34480d4d90a0668bc12362f8aa88000a64e83d0b0e47be48"
}
